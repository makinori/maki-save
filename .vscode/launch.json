{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Test FFmpeg",
			"type": "go",
			"request": "launch",
			"mode": "test",
			"program": "${workspaceFolder}/mobile/ffmpeg",
			"args": ["-test.run", "GetMiddleFrameFromVideo"]
		},
		{
			"name": "Launch Android",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${workspaceFolder}/mobile",
			"env": {
				"INTENT_TEST": "1"
			}
		},
		{
			"name": "Firefox WebExt",
			"type": "firefox",
			"request": "launch",
			"reAttach": true,
			"addonPath": "${workspaceFolder}/webext",
			"reloadOnChange": {
				"watch": [
					"${workspaceFolder}/webext/*.js",
					"${workspaceFolder}/webext/*.wasm"
				]
			}
		}
	]
}
