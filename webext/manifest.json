{
	"name": "maki save",
	"author": "maki",
	"homepage_url": "https://maki.cafe",
	"version": "0.1",
	"manifest_version": 2,
	"description": "scrape images to save to downloads",
	"permissions": ["activeTab", "downloads", "contextMenus", "<all_urls>"],
	"background": {
		"scripts": ["wasm_exec.js", "background.js"],
		"persistent": false
	},
	"browser_action": {
		"default_title": "save current tab"
	},
	"web_accessible_resources": ["maki-save.wasm"],
	"icons": {
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "save@maki.cafe"
		}
	}
}
